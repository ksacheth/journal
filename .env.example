MONGODB_URL=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
JWT_SECRET=your_jwt_secret_here
# Use http://backend:3001 if running inside Docker Compose
# Use http://localhost:3001 if running locally outside Docker
NEXT_PUBLIC_API_URL=http://backend:3001

# Redis Configuration
REDIS_URL=redis://redis:6379
CACHE_ENABLED=true

# Cache TTL Configuration (in seconds)
# CACHE_TTL_ENTRY=3600      # Single entry cache TTL (default: 3600 = 1 hour)
# CACHE_TTL_MONTH=1800      # Monthly entries list cache TTL (default: 1800 = 30 minutes)
# CACHE_TTL_USER_ENTRIES=86400  # User entries metadata cache TTL (default: 86400 = 24 hours)
